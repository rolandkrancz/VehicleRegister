{
	"version": "2.0.0",
	"tasks": [
        {
            "type": "cppbuild",
            "label": "Build with GCC",
            "command": "/opt/homebrew/bin/g++-13",
            "args": [
				"-g",
				"-std=c++20",
				"${workspaceFolder}/*.cpp",
				"-o",
				"${fileDirname}/app"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "compiler: /opt/homebrew/bin/g++-13"
        }
    ]
}